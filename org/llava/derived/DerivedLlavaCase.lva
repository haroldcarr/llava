(define _%do-case 
  (lambda (case)
    (cond ((not (pair? case)) (error "bad syntax in case" case))
	  ((eq? (first case) 'else) case)
	  (else `((member __exp__ ',(first case)) . ,(rest case))))))

(define-syntax case
  (lambda (exp . cases)
    `(let ((__exp__ ,exp)) (cond . ,(map _%do-case cases)))))

