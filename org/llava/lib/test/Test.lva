(define test-require
  (lambda (name)
    (check "test-require first" 
	   true 
	   (instanceof (require name) 'java.lang.String))
    (check "test-require second" 
	   null
	   (require name))))

(define (check msg shouldBe is)
  (_si 'check 'testLava.Test (toString msg) shouldBe is)
  'ok)

(define begin-test
  (lambda args
    (_si 'beginTest 'testLava.Test)))

(define end-test
  (lambda args
    (_if (not (null? args))
	 (print (_sf 'out 'java.lang.System) 
		(string-append (toString (car args)) " : ")))
    (_si 'endTest 'testLava.Test)))

(define (dprintln x)
  (if (_sf 'printProgress 'testLava.Test)
      (println (_sf 'out 'java.lang.System) x)
      null)
  x)

(define toggle-print-results 
  (lambda ()
    (_sf 'printResults 'testLava.Test 
	 (not (_sf 'printResults  'testLava.Test)))))

(define toggle-print-progress
  (lambda ()
    (_sf 'printProgress 'testLava.Test
	 (not (_sf 'printProgress 'testLava.Test)))))

