(define start-new-thread
  (lambda (thunk)
    (let ((thread (new-thread thunk)))
      (start thread)
      thread)))

(define-syntax start-new-thread*
  (lambda body
    `(start-new-thread (lambda () ,@body))))

(provide 'lava/threads/start-new-thread)

